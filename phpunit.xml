<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./pub/dispatch.php">

<php>
    <const name="APPLICATION_ENV" value="testing" />
    <var name="DB_DSN" value="mysql:dbname=database_name;host=127.0.0.1" />
    <var name="DB_USER" value="database_user" />
    <var name="DB_PASSWD" value="password" />
    <var name="DB_DBNAME" value="database_name" />
